# Ryvos Configuration

[agent]
max_turns = 25
max_duration_secs = 600
workspace = "~/.ryvos"

[model]
# Provider: "anthropic", "openai", "ollama", or any OpenAI-compatible API
provider = "anthropic"
model_id = "claude-sonnet-4-20250514"
api_key = "${ANTHROPIC_API_KEY}"
max_tokens = 8192
# temperature = 0.0

# Uncomment for OpenAI:
# provider = "openai"
# model_id = "gpt-4o"
# api_key = "${OPENAI_API_KEY}"

# Uncomment for Ollama (local):
# provider = "ollama"
# model_id = "llama3.2"
# base_url = "http://localhost:11434/v1/chat/completions"

